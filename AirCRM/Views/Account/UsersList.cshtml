@using Presentation.Controllers;
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}
<input id="skipFlag" name="skipFlag" type="hidden" value="false" />


<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card-body">
                        <div class="heading-layout1">
                            <div class="item-title">
                                <h3>All Users</h3>
                            </div>
                        </div>
                        <form class="mg-b-20">
                            <div class="row gutters-8">
                                <div class="col-2-xxxl col-xl-2 col-lg-3 col-12 form-group">
                                    <input type="text" id="txtSearchName" placeholder="Search by User Name..." class="form-control">
                                </div>
                                <div class="col-2-xxxl col-xl-2 col-lg-3 col-12 form-group">
                                    <button type="button" onclick="userObj.getUser('Next');" class="btn btn-block btn-warning btn-flat"><i class="fas fa-search"></i>  SEARCH</button>
                                </div>
                                <div class="col-8-xxxl col-xl-8 col-lg-6 col-12 form-group text-right">
                                    <a href="account/register" class="fw-btn-fill bg-dark-pastel-green"><i class="fas fa-plus"></i> Add User</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div id="divUser">

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div><!-- /.container-fluid -->
    </section>
</div>


