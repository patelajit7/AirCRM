<div class="modal fade show" id="delete-user" aria-modal="true" role="dialog" style="padding-right: 17px; display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Alert!</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body" style="color: red;text-align: center;">
                <h3><i class="icon fas fa-exclamation-triangle"></i></h3>
                <h6 class="item-title red"><strong>Are you sure, you want to delete this user?</strong></h6>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" onclick="userObj.delUser()" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>
