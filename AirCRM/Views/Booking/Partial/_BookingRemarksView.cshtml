
@model List<Infrastructure.Entities.FlightBookingRemarks>
@using Common;
@using Infrastructure;

@if (Model != null && Model.Count > 0)
{    
    <section class="content">
        <div class="container-fluid">
            <div class="card card-default">
                <div class="card-header">
                    <h3 class="card-title">Booking Remarks</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>

                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-12">
                        <div class="timeline">
                            @{
                                string date = "";
                                foreach (var item in Model.OrderByDescending(o => o.Created))
                                {
                                    if (!date.Equals(item.Created.ToString("dd MMM. yyyy")))
                                    {
                                        date = item.Created.ToString("dd MMM. yyyy");
                                        <div class="time-label">
                                            <span class="bg-green">@item.Created.ToString("dd MMM. yyyy")</span>
                                        </div>
                                    }

                                    <div>
                                        <i class="fas fa-user bg-blue"></i>
                                        <div class="timeline-item">
                                            <span class="time"><i class="fas fa-clock"></i> @Utility.RelativeDate(item.Created)</span>
                                            <h3 class="timeline-header"><a href="#">Support Team</a> @item.UserName</h3>
                                            <div class="timeline-body">
                                                @item.Remark
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            <div>
                                <i class="fas fa-clock bg-gray"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}
else
{
    <div class="alert alert-danger">
        There is no remarks.
    </div>
}
