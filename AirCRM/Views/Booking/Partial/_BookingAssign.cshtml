@model Infrastructure.HelpingModels.ViewModel.BookingAssignModelView
@using Common;
@using TravelCRM.Controllers;
@using Infrastructure;

<div class="modal-dialog">
    <div class="modal-content">        
            <form id="frmBookingAssign">
                <div class="modal-header">

                    <h4 class="modal-title">Assign Booking</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-md-12 msg" id="divBookingAssignMsg" style="display:none;">
                        <div id="divBookingAssignErrorMsg" class="alert alert-danger" style="display: none;"></div>
                        <div id="divBookingAssignSuccessMsg" class="alert alert-success" style="display: none;"></div>
                    </div>
                    @Html.HiddenFor(m => m.BookingId)
                    <div class="form-group">
                        <label>User</label>
                        @Html.DropDownListFor(model => model.UserId, StaticData.GetUsers(), new { @class = "form-control", @title = "User" })
                        @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
                    </div>                    
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal" aria-label="Close"><i class="fa fa-times" aria-hidden="true"></i> Close</button>
                    <button type="button" class="btn btn-outline-primary" id="btnUpdate" onclick="objBookings.AssignBooking();"><i class="fa fa-save" aria-hidden="true"></i> Assign</button>
                </div>
            </form>

    </div>
</div>

